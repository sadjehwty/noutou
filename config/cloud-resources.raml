#%RAML 0.8
title: Steroids Data
mediaType: application/json
baseUri: https://rest-api.appgyver.com/v1

traits:
    - securedBySteroidsApiKey:
        headers:
          steroidsApiKey:
            type: string
            example: exampleapikey
            default: a24729329af5a10bbd7046b8bfc221ad58bb49849494f664ddcf6c958ebc5d98
          steroidsAppId:
            type: integer
            example: 1234
            default: 82656
  
