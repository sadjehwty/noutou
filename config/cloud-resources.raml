  - Journey_member: '{"$schema":"http://json-schema.org/schema","type":"object","description":"The canonical Journey representation","properties":{"object":{"type":"object","properties":{"name":{"type":"string"},"closed":{"type":"boolean"}},"required":[]}}}'
  - Cost_collection: '{"$schema":"http://json-schema.org/schema","title":"Cost collection","type":"object","properties":{"objects":{"type":"array","items":{"$schema":"http://json-schema.org/schema","type":"object","description":"The canonical Cost representation","properties":{"date":{"type":"string"},"name":{"type":"string"},"id_journey":{"type":"integer"},"id":{"type":"integer"}},"required":[]}}}}'
  - Cost_member: '{"$schema":"http://json-schema.org/schema","type":"object","description":"The canonical Cost representation","properties":{"object":{"type":"object","properties":{"date":{"type":"string"},"name":{"type":"string"},"id_journey":{"type":"integer"},"id":{"type":"integer"}},"required":[]}}}'
  - Pay_collection: '{"$schema":"http://json-schema.org/schema","title":"Pay collection","type":"object","properties":{"objects":{"type":"array","items":{"$schema":"http://json-schema.org/schema","type":"object","description":"The canonical Pay representation","properties":{"value":{"type":"integer"},"id_person":{"type":"integer"},"id_cost":{"type":"integer"}},"required":[]}}}}'
  - Pay_member: '{"$schema":"http://json-schema.org/schema","type":"object","description":"The canonical Pay representation","properties":{"object":{"type":"object","properties":{"value":{"type":"integer"},"id_person":{"type":"integer"},"id_cost":{"type":"integer"}},"required":[]}}}'
  - JourneyPerson_collection: '{"$schema":"http://json-schema.org/schema","title":"JourneyPerson collection","type":"object","properties":{"objects":{"type":"array","items":{"$schema":"http://json-schema.org/schema","type":"object","description":"The canonical JourneyPerson representation","properties":{"id_journey":{"type":"integer"},"id_person":{"type":"integer"}},"required":[]}}}}'
