  - journey_member: '{"$schema":"http://json-schema.org/schema","type":"object","description":"The canonical journey representation","properties":{"object":{"type":"object","properties":{"name":{"type":"string"},"closed":{"type":"string"}},"required":[]}}}'
  - cost_collection: '{"$schema":"http://json-schema.org/schema","title":"cost collection","type":"object","properties":{"objects":{"type":"array","items":{"$schema":"http://json-schema.org/schema","type":"object","description":"The canonical cost representation","properties":{"date":{"type":"string"},"name":{"type":"string"},"id":{"type":"integer"},"id_journey":{"type":"integer"}},"required":[]}}}}'
