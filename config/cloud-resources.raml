  - pay_member: '{"$schema":"http://json-schema.org/schema","type":"object","description":"The canonical pay representation","properties":{"object":{"type":"object","properties":{"value":{"type":"string"},"id_person":{"type":"integer"},"id":{"type":"integer"},"id_cost":{"type":"integer"}},"required":[]}}}'

