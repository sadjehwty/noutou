#%RAML 0.8
title: Steroids Data
mediaType: application/json
baseUri: https://rest-api.appgyver.com/v1/

traits:
    - securedBySteroidsApiKey:
        headers:
          steroidsApiKey:
            type: string
            example: exampleapikey
            default: 6980e9fcb00d39a64d4020b206d234ec905307cee2a67a17ea483b57e62f939b
          steroidsAppId:
            type: integer
            example: 1234
            default: 81067
  
schemas:
